<%- include('./templates/header.ejs')%>

    <body>
        <div class="container">
            <%- include('./templates/navlogin')%>
        </div>
        <section class="h-100">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col">
                        <div class="card card-registration my-4">
                            <div class="row g-0">
                                <div class="col-xl-6 align-items-center d-flex">
                                    <img src="img/organizador.png"
                                        alt="Sample photo" class="img-fluid"
                                        style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                                </div>
                                <div class="col-xl-6">
                                    <div class="card-body p-md-5 text-black">
                                        <h3 class="mb-5 text-uppercase text-center ">Registro Organizadores Evento</h3>
                                        <form class="mx-1 mx-md-4" action="/registerOrganizer" method="post">
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="inputIdOrganizer">Numero de Cedula</label>
                                            <input type="number" id="inputIdOrganizer" name="inputIdOrganizer" class="form-control form-control-lg border border-black" required/>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="inputNameOrganizer">Nombre Completo</label>
                                            <input type="text" id="inputNameOrganizer" name="inputNameOrganizer" class="form-control form-control-lg border border-black" required/>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="inputPhoneOrganizer">Telefono</label>
                                            <input type="number" id="inputPhoneOrganizer"  name="inputPhoneOrganizer" class="form-control form-control-lg border border-black" required/>
                                        </div>
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" class="btn btn-success btn-lg border border-black">Registrar Organizador</button>
                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
    <%- include('./templates/footer.ejs')%>
    
        </html>